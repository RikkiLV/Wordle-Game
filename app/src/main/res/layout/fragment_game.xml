<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <!-- Header with game title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>


    <!-- Input field for guessing -->
    <EditText
        android:id="@+id/etGuessInput"
        android:layout_width="376dp"
        android:layout_height="59dp"
        android:layout_below="@id/tvTitle"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:hint="Enter your guess"
        android:inputType="text"
        android:maxLength="5"
        android:maxLines="1"
        android:textSize="18sp" />

    <!-- Button to submit the guess -->
    <Button
        android:id="@+id/btnSubmitGuess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etGuessInput"
        android:layout_marginTop="16dp"
        android:text="Check"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"/>

    <!-- Result display -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSubmitGuess"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"/>

    <!-- GridView for previous guesses -->
    <GridView
        android:id="@+id/gridPreviousGuesses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvResult"
        android:numColumns="5"
        android:horizontalSpacing="8dp"
        android:verticalSpacing="8dp"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:stretchMode="columnWidth"/>

</RelativeLayout>
